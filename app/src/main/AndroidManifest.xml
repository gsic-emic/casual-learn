<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="es.uva.gsic.adolfinstro">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_BACKGROUND_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:parentActivityName=".Login"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">

        <activity android:name=".Puntuacion" />
        <activity android:name=".ImagenCompleta">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="es.uva.gsic.adolfinstro.Login" />
        </activity>
        <activity android:name=".Acerca" />
        <activity android:name=".Tarea">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="es.uva.gsic.adolfinstro.Login" />
        </activity>
        <activity
            android:name=".Ajustes"
            android:label="@string/settings"
            android:parentActivityName=".Maps" />
        <activity
            android:name=".Maps"
            android:label="@string/app_name"
            android:theme="@style/AppTheme" />
        <activity android:name=".Login">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/debug"
            android:theme="@style/AppTheme">
        </activity>

        <service
            android:name=".Proceso"
            android:directBootAware="true"
            android:foregroundServiceType="location"
            android:icon="@drawable/ic_launcher_foreground" />

        <receiver android:name=".RecepcionNotificaciones"
            android:exported="true"
            android:enabled="true">
            <intent-filter>
                <action android:name="AHORA_NO" />
                <action android:name="NUNCA_MAS" />
            </intent-filter>
        </receiver>

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="es.uva.gsic.adolfinstro.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>
    </application>

</manifest>