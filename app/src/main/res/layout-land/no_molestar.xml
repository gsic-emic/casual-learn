<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tvNoMolestar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/desactivaNoMolestar"
        android:textSize="@dimen/tama_titulo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="@dimen/margen_texto" />
    <Switch
        android:theme="@style/switchColor"
        android:id="@+id/switchNoMolestar"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:text="@string/noMolestar"
        android:checked="true"
        app:layout_constraintTop_toBottomOf="@id/tvNoMolestar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:onClick="boton"
        android:layout_marginTop="40dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>