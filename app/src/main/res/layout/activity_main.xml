<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/tvLatitudLongitud"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="15dp"
        android:padding="15dp"/>

    <Button
        android:id="@+id/btTexto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tarea texto"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvLatitudLongitud"
        android:onClick="boton"/>

    <Button
        android:id="@+id/btUnaFoto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tarea Una foto"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btTexto"
        android:onClick="boton"/>

    <Button
        android:id="@+id/btVariasFotos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tarea Varias Fotos"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btUnaFoto"
        android:onClick="boton"/>

    <Button
        android:id="@+id/btVideo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tarea vÃ­deo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btVariasFotos"
        android:onClick="boton"/>

    <TextView
        android:id="@+id/tvAjustes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btVideo"
        android:textSize="15dp"
        android:padding="15dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>