<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".Tarea">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

        <TextView
            android:id="@+id/tvDescripcionCompletada"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:textSize="20sp"
            android:visibility="visible"
            android:gravity="center_horizontal"/>

        <RatingBar
            android:id="@+id/rbPuntuacionCompletada"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:stepSize="1"
            android:isIndicator="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvDescripcionCompletada"
            android:visibility="visible" />

        <EditText
            android:id="@+id/etRespuestaTextualCompletada"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:maxLength="600"
            android:hint="@string/hintRespuesta"
            android:maxLines="10"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/rbPuntuacionCompletada"
            android:layout_marginBottom="20dp"
            android:visibility="gone"
            android:inputType="textMultiLine"
            android:enabled="false"
            android:autofillHints="no" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvImagenesAlumno"
            android:layout_width="0dp"
            android:layout_height="310dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/etRespuestaTextualCompletada"
            app:layout_constraintBottom_toBottomOf="parent"
            android:visibility="gone"
            android:layout_marginBottom="10dp"/>

        <ImageView
            android:id="@+id/ivImagenAlumno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="300dp"
            android:maxHeight="300dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/etRespuestaTextualCompletada"
            app:layout_constraintBottom_toBottomOf="parent"
            android:visibility="gone"
            android:layout_marginBottom="10dp"/>

        <ImageView
            android:id="@+id/ivBorrarImagen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/ivImagenAlumno"
            app:layout_constraintEnd_toEndOf="@id/ivImagenAlumno"
            android:src="@drawable/ic_delete_red_48dp"
            android:visibility="gone" />

        <VideoView
            android:id="@+id/vvVideoAlumno"
            android:layout_width="wrap_content"
            android:layout_height="300dp"
            android:maxWidth="300dp"
            android:maxHeight="300dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/etRespuestaTextualCompletada"
            app:layout_constraintBottom_toBottomOf="parent"
            android:visibility="gone"
            android:layout_marginBottom="10dp"/>

        <ImageView
            android:id="@+id/ivBorrarVideo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/vvVideoAlumno"
            app:layout_constraintEnd_toEndOf="@id/vvVideoAlumno"
            android:src="@drawable/ic_delete_red_48dp"
            android:visibility="gone" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>