<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".Login"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/tvAcceso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/etUsuario"
        android:text="@string/app_name"
        android:textSize="50sp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="90dp" />

    <TextView
        android:id="@+id/tvAcessoIncorrecto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/etUsuario"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="15dp"
        android:textColor="@color/errorLogin"
        android:textSize="20sp"/>

    <EditText
        android:id="@+id/etUsuario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/etContrase"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="20sp"
        android:hint="@string/Usuario"
        android:layout_marginVertical="25dp"
        android:layout_marginHorizontal="20dp"
        android:inputType="text" />

    <EditText
        android:id="@+id/etContrase"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/btLog"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="20sp"
        android:hint="@string/Password"
        android:layout_marginVertical="25dp"
        android:layout_marginHorizontal="20dp"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/btRegistro"
        android:layout_width="150dp"
        android:layout_height="75dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btLog"
        android:layout_marginVertical="90dp"
        android:text="@string/registro"
        android:onClick="boton"/>

    <Button
        android:id="@+id/btLog"
        android:layout_width="150dp"
        android:layout_height="75dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/btRegistro"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginVertical="90dp"
        android:text="@string/next"
        android:onClick="boton"/>

</androidx.constraintlayout.widget.ConstraintLayout>
