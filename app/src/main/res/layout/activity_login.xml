<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".Login"
    android:fillViewport="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_fondo_recto">

        <ImageView
            android:id="@+id/ivImangePrincipal"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@drawable/icono_princi_borrar"
            android:padding="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/glLogin1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:contentDescription="@string/imagenFondo" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/glLogin"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.1" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/glLogin1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.32" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/glLogin2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.98" />

        <TextView
            android:id="@+id/tvTextoInicio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="15dp"
            android:paddingVertical="5dp"
            android:text="@string/textoExplicativo"
            app:layout_constraintBottom_toTopOf="@id/btInicioSinIdentificacion"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ivImangePrincipal" />

            <Button
                android:id="@+id/btInicioSinIdentificacion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tvTextoInicio"
                app:layout_constraintBottom_toTopOf="@id/btGoogle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="@string/pruebaApp"
                android:onClick="boton"/>

            <com.google.android.gms.common.SignInButton
                android:id="@+id/btGoogle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/btInicioSinIdentificacion"
                app:layout_constraintBottom_toBottomOf="@id/glLogin2"
                app:layout_constraintEnd_toEndOf="@id/btInicioSinIdentificacion"
                app:layout_constraintStart_toStartOf="@id/btInicioSinIdentificacion" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>