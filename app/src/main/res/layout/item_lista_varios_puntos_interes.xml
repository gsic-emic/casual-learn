<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/clyPuntos"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:paddingVertical="5dp"
    android:paddingHorizontal="@dimen/margen_texto"
    android:layout_marginTop="5dp"
    android:layout_marginEnd="5dp"
    android:layout_marginStart="5dp"
    android:background="@drawable/boton_secundario">

    <TextView
        android:id="@+id/tvVariosPuntosTitulo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/tama_titulo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingBottom="5dp"
        android:textColor="@color/colorPrimaryDark"/>

    <TextView
        android:id="@+id/tvVariosPuntosDistancia"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimary"
        android:textAlignment="textEnd"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvVariosPuntosTitulo"
        android:paddingBottom="5dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
