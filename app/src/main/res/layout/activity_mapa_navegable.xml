<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MapaNavegable">

    <org.osmdroid.views.MapView
        android:id="@+id/mvMapaNavegable"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/openstreetmap_contributors"
        android:background="@color/colorPrimaryLight68"
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toBottomOf="@id/mvMapaNavegable"
        app:layout_constraintStart_toStartOf="@id/mvMapaNavegable"
        android:layout_marginStart="5dp"
        android:textSize="12sp"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btNavegar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/mvMapaNavegable"
        app:layout_constraintEnd_toEndOf="@id/mvMapaNavegable"
        app:backgroundTint="@color/colorSecondary"
        android:layout_marginBottom="45dp"
        android:layout_marginEnd="15dp"
        app:fabSize="normal"
        app:srcCompat="@drawable/ic_navigation_white_72dp"
        android:onClick="boton"/>




</androidx.constraintlayout.widget.ConstraintLayout>