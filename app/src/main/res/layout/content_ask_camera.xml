<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
app:layout_behavior="@string/appbar_scrolling_view_behavior"
tools:context=".Ask_camera"
tools:showIn="@layout/activity_ask_camera"
    android:fillViewport="true">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/tituloPreguntaFoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="40dp"
            android:text="Título"
            android:textStyle="bold"
            android:paddingVertical="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/descripcionPreguntaFoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="Descripción de la tarea que tienen que realizar cuando presionen el botón de la cámara"
            android:paddingVertical="10dp"
            android:paddingHorizontal="10dp"
            android:layout_marginVertical="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tituloPreguntaFoto" />

        <EditText
            android:id="@+id/etRespuestaPreguntaFoto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hintRespuesta"
            android:maxLines="10"
            android:paddingHorizontal="10dp"
            android:paddingVertical="10dp"
            android:textSize="20dp"
            android:layout_marginVertical="40dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/descripcionPreguntaFoto"
            app:layout_constraintBottom_toTopOf="@id/btCancelarPreguntaFoto"/>

        <Button
            android:id="@+id/btCancelarPreguntaFoto"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:text="@string/cancel"
            android:onClick="boton" />



    </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>
