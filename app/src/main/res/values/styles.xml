<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="windowActionBar">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorSecondary</item>
        <item name="android:textColor">@color/texto</item>
        <item name="android:buttonStyle">@style/botonSecundario</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">14sp</item>
        <item name="android:listDivider">@color/colorSecondaryDarkTranspa</item>
        <item name="android:statusBarColor">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorControlNormal">#deffffff</item>
        <item name="android:textColor">@color/texto</item>
        <item name="fontFamily">@font/roboto</item>
        <item name="android:statusBarColor">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="barraPuntua" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/colorStarOff</item>
        <item name="colorControlActivated">@color/colorStarOn</item>
    </style>

    <style name="barraPuntuaPequeÃ±a" parent="Widget.AppCompat.RatingBar.Small">
        <item name="colorControlNormal">@color/colorStarOff</item>
        <item name="colorControlActivated">@color/colorStarOn</item>
    </style>

    <style name="PreferenceScreen" parent="AppTheme">
        <item name="colorAccent">@color/texto</item>
        <item name="colorControlActivated">@color/colorSecondary</item>
    </style>

    <style name="switchColor" parent="AppTheme">
        <item name="colorControlActivated">@color/colorSecondary</item>
    </style>

    <style name="botonPrimario" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/boton_primario</item>
        <item name="android:textColor">@color/colorSecondaryText</item>
        <item name="android:padding">5dp</item>
        <item name="android:drawablePadding">5dp</item>
    </style>

    <style name="botonSecundario" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/boton_secundario</item>
        <item name="android:textColor">@color/colorSecondary</item>
        <item name="android:padding">5dp</item>
        <item name="android:drawablePadding">5dp</item>
    </style>

</resources>
